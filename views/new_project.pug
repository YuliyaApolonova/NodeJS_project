extends layout
block scripts
    script(src='../js/upload.js')
block content
    include header
    .panel
        .container
            .row
                .col-xs-12.col-md-6.pull-left
                    h1.page-title Add new project
    section
        .container
            ul#category-list.works-nav
                li.works-nav-item(data-category='all')
                    span.nav-link.active(data-category='all') All
                li.works-nav-item(data-category='print')
                    span.nav-link(data-category='print') Print
                li.works-nav-item(data-category='photography')
                    span.nav-link(data-category='photography') Photography
                li.works-nav-item(data-category='web')
                    span.nav-link(data-category='web') Web
                li.works-nav-item(data-category='applications')
                    span.nav-link(data-category='applications') Applications
            .row.works-content-container
                form#add-form(action='/upload', method='POST', enctype = 'multipart/form-data')
                    .col-xs-10.col-xs-offset-1.col-sm-5.col-sm-offset-1.col-md-offset-1.col-md-4
                        .addFile-content
                            label.fa.fa-plus
                                input#file.edit-input(name='sample_file', type='file')
                    .col-xs-10.col-xs-offset-1.col-sm-4.col-sm-offset-1.col-md-offset-1.col-md-4.input-content
                        input.edit-input(name='title', type='text', placeholder='Project title')
                        input.edit-input(name='author', type='text', placeholder='Project author')
                        input.edit-input(name='category', type='text', placeholder='Project category')
                    .col-xs-10.col-xs-offset-1.col-sm-10.col-sm-offset-1.col-md-offset-1.col-md-8
                        textarea.description(name='description', rows='10', placeholder='Description')
                    .col-xs-10.col-xs-offset-1.col-sm-10.col-sm-offset-1.col-md-offset-1.col-md-8
                        input.btn.btn-contact(id='addProject', value='Done', type='submit')
